{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    // ✅ Server=Projects (حسب صورتك)
    // ✅ Database=NabdDb (اسم الداتابيز الجديدة)
    // ✅ Trusted_Connection=True (عشان Windows Auth)
    // ✅ TrustServerCertificate=True (عشان يعدي تشفير SSL المحلي)
    "DefaultConnection": "Server=localhost;Database=NabdDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "SecretKey": "ThisIsASecretKeyForNabdProject_MustBeLongEnough_To_Be_Secure_123456",
    "Issuer": "NabdAPI",
    "Audience": "NabdUser",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "CorsSettings": {
    "AllowedOrigins": [ "http://localhost:4200", "http://localhost:3000" ]
  }
}